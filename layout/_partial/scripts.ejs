<% if(is_home()){ %>
<script>
  $(function () {
    // 添加首页打字效果
    (function () {
      let i = 0;
      let txt = "<%- config.author_detail %>";
      let speed = 100;
      let detail = $("#typewriter").get(0)
      function typeWriter() {
        if (i < txt.length) {
          detail.innerHTML += txt.charAt(i);
          i++;
          setTimeout(typeWriter, speed);
        } else {
          detail.innerHTML = '';
          i = 0
          setTimeout(typeWriter, 130);
        }
      }
      typeWriter()
    })()
    //添加header导航栏自适应效果
    let curtainClick = $('.curtain-click')
    curtainClick.click(function () {
      $('.header-right').css('height', '100%')
    })
    let closeCurtain = $('#close-curtain')
    closeCurtain.click(function () {
      $('.header-right').css('height', '0%')
    })
    //修复由于小屏幕造成的.header-right-nav 高度为0%后，resize依旧不显示的问题
    $(window).resize(function () {
      if (window.innerWidth >= 768) {
        $('.header-right').css('height', '100%')
      }else{
        $('.header-right').css('height', '0%')
      }
    })

  })

</script>
<% } %>
<!-- click effect -social_value -->
<% if (theme.click_effects.social_value){ %>
<script type="text/javascript">
  jQuery(document).ready(function ($) {
    let coreSocialistValues = ["富强", "民主", "文明", "和谐", "自由", "平等", "公正", "法治", "爱国", "敬业", "诚信", "友善"]
    let colors = ["#11f0e5", "#e815d3", "#f7f30f", "#e8270e", "#15eb59", "#881df2", "#fa9120"]
    let index = Math.floor(Math.random() * coreSocialistValues.length);
    $('body').click(function (e) {
      //过滤a标签
      if (e.target.tagName == 'A') {
        return;
      }
      let $i = $("<span />").text(coreSocialistValues[index]);
      index = (index + 1) % coreSocialistValues.length;
      let color_index = Math.floor(Math.random() * colors.length);
      let color = colors[color_index]
      let x = e.pageX,
        y = e.pageY;
      $i.css({
        "z-index": 999999,
        "top": y - 20,
        "left": x,
        "position": "absolute",
        "font-weight": "bold",
        "color": color
      });
      $("body").append($i);
      $i.animate({
        "top": y - 180,
        "opacity": 0
      },
        1500,
        function () {
          $i.remove();
        });
    })
  })
</script>
<% } %>
