#header{
    position:relative;    
    padding: 0 1em;
    height:3.5rem;   
    background:#333;
    color:#fff;
    .header-left{
      display:flex;
      justify-content: space-between;
      align-items: center;
      width:fit-content;
      margin:0 auto;
      div{
        width:3rem;
        height:3rem;
        img{
          width:100%;
          display:block;
          border-radius:50%;
          filter: invert(100%) contrast(200%);
        }
      }
      h1{
        font-size:1.2rem;
        font-weight: normal;
      }
    }
    .header-right{
      position:fixed;
      z-index:1;
      top:0;
      left:0;
      width:100%;
      height:0%;
      // 由于高度有渐变效果，初始高度为0，所以要设置overflow属性，否则子元素会显示在屏幕上
      overflow :hidden;
      background-color: rgba(0,0,0, 0.9);
      font-size:1.4rem;
      transition: .3s;
      #close-curtain{
          position:absolute;
          font-size: 2rem;
          width :1.2rem;
          height 1.2rem;
          top:.2em;
          right:.2em;
          cursor:pointer;
        }
      .header-right-nav{
        list-style: none;
        position:relative;
        padding: 0;
        margin: 0 auto;
        margin-top:3rem;
        display:flex;
        height:80vh;
        flex-direction: column;
        justify-content: space-between;
        align-items: center;
        .icon{
          a{
            text-decoration: none;
            color:white;
            cursor :pointer
            i{
              font-size: 1rem;
            }
          } 
          &:hover{
            border-bottom:solid 1px orange;
          }
        }

      }
    }
    .curtain-click{
      display:block;
      position:absolute;
      cursor :pointer;
      width:3rem;
      height:3rem;
      top:0;
      right:0;
      font-size:2.4rem;
      line-height: 3.5rem;
    }



}
@media only screen and (min-width: 768px) {
  #header{
    display:flex;
    justify-content: space-between;
    align-items: center;
    .header-left{
      margin:unset;
    }
    .header-right{
      position:static;
      width:33%;
      height:100%;
      background-color: unset;
      #close-curtain{
        display:none;
      }
      .header-right-nav{
        flex-direction: row;
        height:100%;
        margin:0;
      }
    }
    .curtain-click{
      display: none;
    }
  }
}